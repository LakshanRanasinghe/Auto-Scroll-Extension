{
    "manifest_version": 3,
    "name": "Auto Scroll Extension",
    "version": "1.0",
    "description": "Auto-scrolls the webpage and reverses at the top or bottom.",
    "permissions": ["scripting", "activeTab"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "scroll-icon-16.png",
        "48": "scroll-icon-48.png",
        "128": "scroll-icon-128.png"
      }
    },
    "icons": {
        "16": "scroll-icon-16.png",
        "48": "scroll-icon-48.png",
        "128": "scroll-icon-128.png"
    },
    "host_permissions": ["<all_urls>"]
  }
  